			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>${maven.compiler.version}</version>
				<configuration>
					<source>${maven.compiler.source}</source>
					<target>${maven.compiler.target}</target>
				</configuration>
			</plugin>
			<!-- OpenAPI Generator: generate models and APIs from OpenAPI spec -->
			<plugin>
				<groupId>org.openapitools</groupId>
				<artifactId>openapi-generator-maven-plugin</artifactId>
				<version>6.6.0</version>
				<executions>
					<execution>
						<id>generate-sources</id>
						<goals>
							<goal>generate</goal>
						</goals>
						<phase>generate-sources</phase>
						<configuration>
							<inputSpec>${project.basedir}/src/main/resources/openapi/api-spec.yaml</inputSpec>
							<generatorName>spring</generatorName>
							<library>spring-boot</library>
							<output>${project.build.directory}/generated-sources/openapi</output>
							<apiPackage>com.captain.api</apiPackage>
							<modelPackage>com.captain.model</modelPackage>
							<invokerPackage>com.captain.invoker</invokerPackage>
							<configOptions>
								<dateLibrary>java8</dateLibrary>
								<!-- Disable test generation -->
								<generateApiTests>false</generateApiTests>
								<generateModelTests>false</generateModelTests>
								<generateSpringBootApplication>false</generateSpringBootApplication>
								<!-- Switch generated imports to Jakarta and adapt for Spring Boot 3 -->
								<useJakartaEe>true</useJakartaEe>
								<useSpringBoot3>true</useSpringBoot3>
							</configOptions>
									<ignoreFileOverride>${project.basedir}/src/main/resources/openapi/.openapi-generator-ignore</ignoreFileOverride>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<!-- Post-process generated sources to remove specific files that are incompatible or undesired -->
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-antrun-plugin</artifactId>
				<version>1.8</version>
				<executions>
					<execution>
						<id>prune-openapi-generated-files</id>
						<phase>generate-sources</phase>
						<configuration>
							<target>
								<delete quiet="true" file="${project.build.directory}/generated-sources/openapi/src/main/java/com/captain/invoker/OpenApiGeneratorApplication.java"/>
								<delete quiet="true" file="${project.build.directory}/generated-sources/openapi/src/test/java/com/captain/invoker/OpenApiGeneratorApplicationTests.java"/>
							</target>
						</configuration>
						<goals>
							<goal>run</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>

</project>
